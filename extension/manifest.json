{
  "manifest_version": 2,
  "name": "PCCruises Events Extension",
  "description": "Adds the PCCruises Events Widget to Chrome's toolbar and shows notifications for new events and events starting in 30 & 15 minutes.",
  "version": "1.2.0",
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "permissions": [
    "gcm",
    "storage",
    "notifications",
    "identity"
  ],
  "icons": {
    "128": "img/logo.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}